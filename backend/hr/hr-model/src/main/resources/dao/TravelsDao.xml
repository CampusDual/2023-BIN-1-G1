<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
        xmlns="http://www.ontimize.com/schema/jdbc"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
        catalog="" schema="${mainschema}" table="travels"
        datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>id_travel</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>id_travel</Column>
    </UpdateKeys>
    <GeneratedKey>id_travel</GeneratedKey>
    <Queries>
        <Query id="default">
            <Sentence>
                <![CDATA[
                WITH t as(
                SELECT
                    T.*,
                    dv1.device_name as device_in, dv2.device_name as device_out,
                    P.plate_number,
                    TP.trailer_plate_number,
                    DN.delivery_name
                    FROM PUBLIC.travels T
                        INNER JOIN PUBLIC.delivery_notes DN ON
                        T.id_delivery_note = DN.id_delivery_note
                        INNER JOIN PUBLIC.devices DV1 ON
                        T.id_dev_in = DV1.id_dev
                        INNER JOIN PUBLIC.devices DV2 ON
                        T.id_dev_out = DV2.id_dev
                        INNER JOIN PUBLIC.plates P on
                        T.id_plate = P.id_plate
                        INNER JOIN PUBLIC.trailer_plates TP on
                        T.id_trailer_plate = TP.id_trailer_plate
                )
                SELECT #COLUMNS# FROM t
                 #WHERE#
                ]]>
            </Sentence>
        </Query>
        <Query id="query_get_stock">
            <Sentence>
                <![CDATA[
                    SELECT (sum(scan_volume_in) - sum(scan_volume_out)) AS stock FROM travels
                    UNION
                    SELECT max_stock FROM warehouse;
                ]]>
            </Sentence>
        </Query>
