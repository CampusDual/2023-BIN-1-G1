<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
        xmlns="http://www.ontimize.com/schema/jdbc"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
        catalog="" schema="${mainschema}" table="companies"
        datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>id_company</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>id_company</Column>
    </UpdateKeys>
    <GeneratedKey>id_company</GeneratedKey>
    <Queries>
        <Query id="default">
            <Sentence>
                <![CDATA[
                    SELECT
                        c.*,
                        COALESCE(tc.num_travels, 0) AS num_travels
                    FROM
                        companies c
                    LEFT JOIN (
                        SELECT
                            cp.id_company,
                            COUNT(t.id_travel) AS num_travels
                        FROM
                            companies_plates cp
                        JOIN
                            travels t ON cp.id_plate = t.id_plate
                        GROUP BY
                            cp.id_company
                    ) tc ON c.id_company = tc.id_company
                    ORDER BY
                      num_travels DESC;
                ]]>
            </Sentence>
        </Query>
        <Query id="insert_company_trucks">
            <Sentence>
                <![CDATA[
                    INSERT INTO companies_plates(id_company, id_plate) values
                    #WHERE#
                ]]>
            </Sentence>
        </Query>
    </Queries>
</JdbcEntitySetup>